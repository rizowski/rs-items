// CTRL + SHIFT + T Will run the tests
{
	"version": "0.1.0",

	"command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "tasks":[
    {
      "taskName":"ci",
      "args": [
        "run-script"
      ],
      "isWatching": true,
      "showOutput": "always"
    },
    {
      "taskName":"coverage",
      "args": [
        "run-script"
      ],
      "isWatching": true,
      "isTestCommand": true,
      "showOutput": "always"
    }
  ]
}